{
  "Jwt": {
    "Key": "super_secret_dev_key_12345678987654321",
    "Issuer": "UserService",
    "Audience": "UserServiceClients"
  },
  "ReverseProxy": {
    "Routes": {
      "users-swagger": {
        "ClusterId": "users",
        "Match": { "Path": "/users/swagger/{**catch-all}" },
        "Order": 1,
        "Transforms": [ { "PathRemovePrefix": "/users" } ]
      },
      "currency-swagger": {
        "ClusterId": "currency",
        "Match": { "Path": "/currency/swagger/{**catch-all}" },
        "Order": 1,
        "Transforms": [ { "PathRemovePrefix": "/currency" } ]
      },
      
      "users-login-kebab":  { "ClusterId": "users", "Match": { "Path": "/users/login"  }, "Order": 10 },
      "users-login-Pascal": { "ClusterId": "users", "Match": { "Path": "/User/login"   }, "Order": 10 },

      "users-register-kebab":  { "ClusterId": "users", "Match": { "Path": "/users/register" }, "Order": 10 },
      "users-register-Pascal": { "ClusterId": "users", "Match": { "Path": "/User/register"  }, "Order": 10 },
      
      "currency-public": { "ClusterId": "currency", "Match": { "Path": "/currency/rates" }, "Order": 10 },
      
      "users-private-kebab": {
        "ClusterId": "users",
        "Match": { "Path": "/users/{**catch-all}" },
        "AuthorizationPolicy": "Authenticated",
        "Order": 100
      },
      "users-private-Pascal": {
        "ClusterId": "users",
        "Match": { "Path": "/User/{**catch-all}" },
        "AuthorizationPolicy": "Authenticated",
        "Order": 100
      },

      "currency-private": {
        "ClusterId": "currency",
        "Match": { "Path": "/currency/{**catch-all}" },
        "AuthorizationPolicy": "Authenticated",
        "Order": 100
      }
    },
    "Clusters": {
      "users":    { "Destinations": { "d1": { "Address": "https://localhost:7130" } } },
      "currency": {
        "Destinations": { "d1": { "Address": "https://localhost:7178" } },
        "HttpClient": { "DangerousAcceptAnyServerCertificate": true }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Yarp.ReverseProxy": "Debug"
    }
  }
}
